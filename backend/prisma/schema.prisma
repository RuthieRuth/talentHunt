generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  googleId  String   @unique
  email     String   @unique
  name      String
  picture   String?
  role      Role     @default(CANDIDATE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  applications Application[] @relation("Applications")
  postedJobs  Job[]          @relation("PostedJobs")    
}

model Job {
  id            String   @id @default(uuid())
  title         String
  description   String
  company       String
  location      String?
  salary        String?
  status        JobStatus @default(ACTIVE)
  postedBy      String?
  postedByUser  User?   @relation("PostedJobs", fields: [postedBy], references: [id])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  applications  Application[]
}

model Application {
  id          String   @id @default(uuid())
  jobId       String?
  candidateId String
  fullName    String
  email       String
  phoneNumber String? 
  cvLink      String?
  coverLetter String?
  status      ApplicationStatus @default(PENDING)
  appliedAt   DateTime @default(now())

  job         Job?     @relation(fields: [jobId], references: [id], onDelete: SetNull)
  candidate   User     @relation("Applications", fields: [candidateId], references: [id], onDelete: Restrict)
}

enum Role {
  ADMIN
  CANDIDATE
}

enum JobStatus {
  ACTIVE
  CLOSED
}

enum ApplicationStatus {
  PENDING
  REVIEWED
  REJECTED
  ACCEPTED
}



